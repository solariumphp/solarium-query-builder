{
    "name": "solarium/solarium-querybuilder",
    "type": "library",
    "description": "Solarium extension that adds support to build a Solarium query instance by parsing a Solr request",
    "keywords": ["solr", "search", "php", "query", "builder"],
    "homepage": "http://www.solarium-project.org",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "See GitHub contributors",
            "homepage": "https://github.com/basdenooijer/solarium/contributors"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "solarium/solarium": "~3.7"
    },
    "require-dev": {
        "phpunit/phpunit": "~3.7"
    },
    "autoload": {
        "psr-0": { "Solarium\\QueryBuilder": "library/" }
    }
}
